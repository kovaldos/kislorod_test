extends ../components/base/layout

block variables
  - const title = "Список страниц"

block main
  style
    include ../../sass/inline/sitemap.css

  -
    const pages = [
      {
        name: "Главная — index.html",
        src: "index.html"
      },
      {
        name: "Отзывы — reviews.html",
        src: "reviews.html"
      },
    ]

  main
    .sitemap
      .container
        img(src="https://via.placeholder.com/300x150", width="300", alt="Логотип проекта", style="margin-bottom: 20px")
        h1(style="margin-bottom: 20px") Список страниц
        ol
          each page in pages
            li
              if page.id
                label(for=page.id)
                  span!= page.name
                input.visually-hidden(type="checkbox", checked=true, id=page.id)
                div
                  ul
                    each item in page.innerList
                      li
                        a(href= item.src)= item.name
              else
                a(href= page.src)= page.name
